<!DOCTYPE html>
<html lang="en">

<head>
    <% include ../views/partials/head %>
</head>

<body>

<div class="container">
    <div class="row">
        <div class="col-md-4 col-md-offset-4">
            <div class="login-panel panel panel-primary">
                <div class="panel-heading">
                    <h3 class="panel-title">Please Sign In</h3>
                </div>
                <div class="panel-body">
                    <form method="post" action="/login">
                        <fieldset>
                            <% if(typeof(errorMessage) !== 'undefined') { %>
                            <div class="form-group text-danger">
                                <b><span><%= errorMessage %></span></b>
                            </div>
                            <% } %>
                            <div class="form-group">
                                <input class="form-control" placeholder="Username" name="username" type="username"
                                       id="username" required="true" autofocus>
                            </div>
                            <div class="form-group">
                                <input class="form-control" placeholder="Password" name="password" type="password"
                                       id="password" required="true" value="">
                            </div>
                            <div class="checkbox">
                                <label>
                                    <input name="remember" type="checkbox" value="Remember Me">Remember Me
                                </label>
                            </div>
                            <div class="button">
                                <input type="submit" name="signin" id="signin" value="sign in" class="btn btn-lg btn-success btn-block"/>
                            </div>
                        </fieldset>
                    </form>
                </div>
            </div>
        </div>
    </div>
</div>

<% include ../views/partials/end %>

</body>

</html>