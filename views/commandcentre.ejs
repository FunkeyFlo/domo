<!DOCTYPE html>
<html lang="en">

<head>
    <% include ../views/partials/head %>
</head>

<body onload="startTime()">

<div id="wrapper">

    <!-- Navigation include -->
    <% include ../views/partials/nav %>

    <!-- Page Content -->
    <div id="page-wrapper">
        <div class="container-fluid">
            <div class="row">
                <div class="col-lg-12">
                    <h1 class="page-header">Domo - Command Centre</h1>
                </div>
                <!-- /.col-lg-12 -->
            </div>
            <!-- /.row -->
            <div class="row">
                <div class="col-lg-4">
                    <div class="panel panel-primary">
                        <div class="panel-heading">
                            Nieuw commando toevoegen!
                        </div>
                        <div class="panel-body">
                            <form action="/create" method="post">
                                <div class="form-group input-group">
                                    <span class="input-group-addon">
                                        <i class="fa fa-comment fa-fw"></i>
                                    </span>
                                    <input type="text" placeholder="Commando dat u wilt geven!" name="text"
                                           class="form-control">
                                </div>
                                <div class="form-group input-group">
                                    <span class="input-group-addon">
                                        <i class="fa fa-volume-up fa-fw"></i>
                                    </span>
                                    <input type="text" placeholder="Commando dat u wilt geven!" name="text"
                                           class="form-control">
                                </div>
                                <div class="button">
                                    <input id="signin" type="submit" name="nieuw commando"
                                           value="nieuw commando aanmaken!" class="btn btn-primary btn-sm btn-block">
                                </div>
                            </form>
                        </div>
                    </div>
                </div>
                <div class="col-lg-4">
                    <div class="panel panel-green">
                        <div class="panel-heading">
                            Commando 1
                        </div>
                        <!-- /.panel-heading -->
                        <div class="panel-body">
                            <fieldset disabled="">
                                <div class="form-group input-group">
                                    <span class="input-group-addon">
                                        <i class="fa fa-volume-up fa-fw"></i>
                                        <i class="fa fa-comment fa-fw"></i>
                                    </span>
                                    <input type="text" placeholder="Commando 1 response" class="form-control">
                                </div>
                            </fieldset>
                            <!-- Nav tabs -->
                            <ul class="nav nav-pills">
                                <li>
                                    <a href="#task1" data-toggle="tab">Taak 1</a>
                                </li>
                            </ul>

                            <!-- Tab panes -->
                            <div class="tab-content">
                                <div id="task1" class="tab-pane fade">
                                    <div class="row top-buffer"></div>
                                    <fieldset disabled="">
                                        <div class="form-group input-group">
                                            <span class="input-group-addon">
                                                <i class="fa fa-cog fa-fw"></i>
                                            </span>
                                            <input type="text" placeholder="Nachtlamp aan" class="form-control">
                                        </div>
                                        <div class="form-group input-group">
                                            <span class="input-group-addon">
                                                <i class="fa fa-terminal fa-fw"></i>
                                            </span>
                                            <input type="text" placeholder="kaku C 1 on" class="form-control">
                                        </div>
                                        <a href="/1/tasks/1/destroy"
                                           onclick="return confirm('Weet u zeker dat u taak Nachtlamp aan wilt verwijderen?')">Verwijder
                                            taak</a>
                                    </fieldset>
                                </div>
                            </div>
                        </div>
                        <!-- /.panel-body -->
                        <a href="#" data-toggle="modal" data-target="#1k">
                            <div class="panel-footer"><span
                                        class="pull-left">Voeg nog een taak toe aan dit commando!</span><span
                                        class="pull-right"><i class="fa fa-arrow-circle-right"></i></span>

                                <div class="clearfix"></div>
                            </div>
                        </a>
                    </div>
                    <!-- /.panel -->
                </div>
            </div>
        </div>
        <!-- /.container-fluid -->
    </div>
    <!-- /#page-wrapper -->
</div>

<% include ../views/partials/end %>

</body>

