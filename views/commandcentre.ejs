<!DOCTYPE html>
<html lang="en">

<head>
    <% include ../views/partials/head %>
</head>

<body onload="startTime()">

<div id="wrapper">

    <!-- Navigation include -->
    <% include ../views/partials/nav %>

    <!-- Page Content -->
    <div id="page-wrapper">
        <div class="container-fluid">
            <div class="row">
                <div class="col-lg-12">
                    <h1 class="page-header">Domo - Command Centre</h1>
                </div>
                <!-- /.col-lg-12 -->
            </div>
            <!-- /.row -->
            <div class="row">
                <div class="col-lg-4">
                    <div class="panel panel-primary">
                        <div class="panel-heading">
                            Nieuw commando toevoegen!
                        </div>
                        <div class="panel-body">
                            <form action="/create" method="post">
                                <div class="form-group input-group">
                                    <span class="input-group-addon">
                                        <i class="fa fa-comment fa-fw"></i>
                                    </span>
                                    <input type="text" placeholder="Naam van het commando" name="title"
                                           class="form-control">
                                </div>
                                <div class="form-group input-group">
                                    <span class="input-group-addon">
                                        <i class="fa fa-comment fa-fw"></i>
                                    </span>
                                    <input type="text" placeholder="expressie" name="expression"
                                           class="form-control">
                                </div>
                                <div class="form-group input-group">
                                    <span class="input-group-addon">
                                        <i class="fa fa-volume-up fa-fw"></i>
                                    </span>
                                    <input type="text" placeholder="Gewenste response van het systeem" name="response"
                                           class="form-control">
                                </div>
                                <div class="button">
                                    <input id="signin" type="submit" name="nieuw commando"
                                           value="nieuw commando aanmaken!" class="btn btn-primary btn-sm btn-block">
                                </div>
                            </form>
                        </div>
                    </div>
                </div>

                <% commands.forEach(function(command){ %>
                <div class="col-lg-4">
                    <div class="panel panel-green">
                        <div class="panel-heading">
                            <span class="pull-left">
                                <%= command.title %>
                            </span>
                            <span class="pull-right">
                                <a href="/<%= command.id %>/destroy"
                                   onclick="return confirm('Weet u zeker dat u commando <%= command.title %> wilt verwijderen?')"><i
                                            class="fa fa-trash"></i>
                                </a>
                            </span>

                            <div class="clearfix"></div>
                        </div>
                        <!-- /.panel-heading -->
                        <div class="panel-body">
                            <fieldset disabled="">
                                <div class="form-group input-group">
                                    <span class="input-group-addon">
                                        <i class="fa fa-file-text fa-fw"></i>
                                        <i class="fa fa-comment fa-fw"></i>
                                    </span>
                                    <input type="text" placeholder="<%= command.expression %>" class="form-control">
                                </div>
                                <div class="form-group input-group">
                                    <span class="input-group-addon">
                                        <i class="fa fa-volume-up fa-fw"></i>
                                        <i class="fa fa-comment fa-fw"></i>
                                    </span>
                                    <input type="text" placeholder="<%= command.response %>" class="form-control">
                                </div>
                            </fieldset>
                            <!-- Nav tabs -->
                            <% command.Tasks.forEach(function(task){ %>
                            <ul class="nav nav-pills">
                                <li>
                                    <a href="#<%= task.id %>" data-toggle="tab"><%= task.title %></a>
                                </li>
                            </ul>
                            <!-- Tab panes -->
                            <div class="tab-content">
                                <div id="<%= task.id %>" class="tab-pane fade">
                                    <div class="row top-buffer"></div>
                                    <fieldset disabled="">
                                        <div class="form-group input-group">
                                            <span class="input-group-addon">
                                                <i class="fa fa-terminal fa-fw"></i>
                                            </span>
                                            <input type="text" placeholder="<%= task.cmd %>" class="form-control">
                                        </div>
                                        <a href="/<%= command.id %>/tasks/<%= task.id %>/destroy"
                                           onclick="return confirm('Weet u zeker dat u <%= task.title %> wilt verwijderen?')">Verwijder
                                            taak</a>
                                    </fieldset>
                                </div>
                            </div>
                            <% }) %>
                        </div>
                        <!-- /.panel-body -->
                        <a href="#" data-toggle="modal" data-target="#add<%= command.id %>">
                            <div class="panel-footer"><span
                                        class="pull-left">Voeg nog een taak toe aan dit commando!</span><span
                                        class="pull-right"><i class="fa fa-arrow-circle-right"></i></span>

                                <div class="clearfix"></div>
                            </div>
                        </a>

                        <!-- Modal for adding tasks -->
                        <div class="modal fade" id="add<%= command.id %>" tabindex="-1" role="dialog"
                             aria-labelledby="myModalLabel"
                             aria-hidden="true">
                            <div class="modal-dialog">
                                <div class="modal-content">
                                    <div class="modal-header">
                                        <button type="button" class="close" data-dismiss="modal"><span
                                                    aria-hidden="true">&times;</span><span class="sr-only">Close</span>
                                        </button>
                                        <h4 class="modal-title" id="myModalLabel">Taak toevoegen aan commando
                                            <b><i><%= command.text %></i></b></h4>
                                    </div>
                                    <form method="POST" action="/<%= command.id %>/tasks/create">
                                        <div class="modal-body">
                                            <div class="form-group input-group">
                                            <span class="input-group-addon">
                                                <i class="fa fa-cog fa-fw"></i>
                                            </span>
                                                <input type="text" placeholder="Naam van nieuwe taak"
                                                       class="form-control" name="title">
                                            </div>
                                            <div class="form-group input-group">
                                            <span class="input-group-addon">
                                                <i class="fa fa-terminal fa-fw"></i>
                                            </span>
                                                <input type="text" placeholder="commandline code" class="form-control"
                                                       name="cmd">
                                            </div>
                                        </div>
                                        <div class="modal-footer">
                                            <button type="button" class="btn btn-danger" data-dismiss="modal">
                                                Sluiten
                                            </button>
                                            <input class="btn btn-success" type="submit"
                                                   value="Nieuwe taak toevoegen!"/>
                                        </div>
                                    </form>
                                </div>
                            </div>
                        </div>
                    </div>
                    <!-- /.panel -->
                </div>
                <% }) %>
            </div>
        </div>
        <!-- /.container-fluid -->
    </div>
    <!-- /#page-wrapper -->
</div>

<% include ../views/partials/end %>

</body>

<% include ../views/functionality/voice %>
<% include ../views/functionality/socket1 %>

</html>