extends layout/layout

block content

    .container
        .row
            .col-md-4.col-md-offset-4
                .login-panel.panel.panel-primary
                    .panel-heading
                        h3.panel-title Please Sign In
                    .panel-body
                        form(method='post', action='/login')
                            fieldset
                                .form-group
                                    input#username.form-control(placeholder='Username', name='username', type='username', required='true', autofocus='')
                                .form-group
                                    input#password.form-control(placeholder='Password', name='password', type='password', required='true', value='')
                                .checkbox
                                    label
                                        input(name='remember', type='checkbox', value='Remember Me')
                                        | Remember Me
                                .button
                                    input#signin.btn.btn-lg.btn-success.btn-block(type='submit', name='login', value='login')
                                br
                                .button(align='center')